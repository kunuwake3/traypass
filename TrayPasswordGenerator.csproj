<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>

    <!-- худой self-contained EXE -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <PublishTrimmed>true</PublishTrimmed>

    <!-- подтверждаем, что ОСОЗНАННО триммим WinForms -->
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableWindowsFormsTrimSupport>true</EnableWindowsFormsTrimSupport>

    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <ApplicationIcon>tray_favicon.ico</ApplicationIcon>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="tray_favicon.ico" />
  </ItemGroup>
</Project>
